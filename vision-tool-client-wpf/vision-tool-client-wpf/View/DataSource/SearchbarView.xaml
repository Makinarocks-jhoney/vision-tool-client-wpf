<UserControl x:Class="vision_tool_client_wpf.View.DataSource.SearchbarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             MinWidth="900" MinHeight="200"
             >

    <!-- ===== 레이아웃 ===== -->
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 타이틀 -->
            <RowDefinition Height="Auto"/>
            <!-- 서치바 카드 -->
            <RowDefinition Height="Auto"/>
            <!-- 하단: 커스텀 필터 + 버튼 2개 -->
        </Grid.RowDefinitions>

        <!-- 제목: "카메라 설정" -->
        <Label Grid.Row="0" Style="{StaticResource CommonLabelStyle}" FontSize="20" Content="실시간 검사"  />

        <!-- 서치바 카드(배경=F8F8FC, Corner 12, 얕은 외곽선) -->
        <Border Grid.Row="1" Style="{StaticResource CustomPanelStyle}" Margin="15,15,15,10" Background="#F8F8FC"
                BorderThickness="2" CornerRadius="12" Padding="20">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- 날짜 필터 행 -->
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="Auto"/>
                    <!-- 검색 행 -->
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <!-- 왼쪽 라벨 폭 -->
                    <ColumnDefinition Width="260"/>
                    <!-- 시작일 -->
                    <ColumnDefinition Width="24"/>
                    <!-- ~ -->
                    <ColumnDefinition Width="260"/>
                    <!-- 종료일 -->
                    <ColumnDefinition Width="*"   />
                    <!-- 여백 -->
                </Grid.ColumnDefinitions>

                <!-- "Lọc thời gian:" -->
                <Label Grid.Row="0" Grid.Column="0"
                           Style="{StaticResource CommonLabelStyle}"
                           Content="기간" 
                           />

                <!-- 시작일 -->
                <Border Grid.Row="0" Grid.Column="1" >
                    <mah:DateTimePicker  />
                </Border>

                <!-- 틸드 "~" -->
                <Label Grid.Row="0" Grid.Column="2" Content="~"
                            Style="{StaticResource CommonLabelStyle}"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>

                <!-- 종료일 -->
                <Border Grid.Row="0" Grid.Column="3"  Height="40">
                    <mah:DateTimePicker  />
                </Border>

                <!-- "Tìm kiếm:" -->
                <Label Grid.Row="2" Grid.Column="0"
                           Content="검색" 
                            VerticalAlignment="Center"/>

                <!-- 검색 필드 (🔍 placeholder) -->
                <Border Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3"
                         Height="40">
                    <TextBox Style="{StaticResource SearchTextBoxStyle}"
                             mah:TextBoxHelper.UseFloatingWatermark="True"
                             mah:TextBoxHelper.Watermark="🔍  Search..."
                              />
                </Border>
            </Grid>
        </Border>

        <!-- 하단: 커스텀 필터 바(왼쪽) + 버튼 2개(오른쪽) -->
        <Grid Grid.Row="2" Margin="15,0,15,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- CustomFilterBar 자리(디자인용 바탕만) -->
            <Border Grid.Column="0" Height="60"
                    Background="Transparent" 
                    BorderThickness="0" CornerRadius="6"
                    VerticalAlignment="Center">
                <!-- 여기 안에 필터 버튼/토글들이 들어갈 예정 -->
            </Border>

            <!-- Upload 버튼 -->
            <Button Grid.Column="1"
                    BorderThickness="2"
                    Command="{Binding CommandOpenDataUpload}"
                    Width="130"
                    Style="{StaticResource UploadButtonStyle}"
                    VerticalAlignment="Center">
                
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                    <Image Width="20" Height="20"
                           Source="/Resources/plus.png"/>
                        <Label FontSize="16" Content="Upload" Foreground="White" FontFamily="Arial" FontWeight="Normal" />
                    </StackPanel>
                </Button.Content>
            </Button>

            <!-- Select All 버튼 -->
            <Button Grid.Column="3" 
                    Style="{StaticResource SelectAllButtonStyle}"
                    BorderThickness="2"
                    Width="130"
                    VerticalAlignment="Center">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                    <Image Width="20" Height="20"
                           Source="/Resources/icon-park-outline_done-all.png"/>
                    <Label FontSize="16" Content="Select All" FontFamily="Arial" FontWeight="Normal" />
                    </StackPanel>
                </Button.Content>
            </Button>
        </Grid>
    </Grid>
    
</UserControl>
