<UserControl x:Class="vision_tool_client_wpf.View.RealTimeInspectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:custom="clr-namespace:vision_tool_client_wpf.View.DataSource"
             xmlns:local="clr-namespace:vision_tool_client_wpf.View"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
    <mah:FlyoutsControl Panel.ZIndex="10" >
            <mah:Flyout IsOpen="{Binding IsOpenDataUpload}" Position="Right" 
                        Theme="Light"
                        BorderBrush="{DynamicResource MahApps.Brushes.ThemeForeground}" BorderThickness="1"
                        
                        >
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Grid.Resources>
                        <Style TargetType="Label" BasedOn="{StaticResource CommonLabelStyle}">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </Grid.Resources>
                    <Label Grid.Row="0" Content="데이터 업로드" />
                    <Label Grid.Row="1" Content="데이터 세트를 업데이트하기 위해 파일을 업로드하세요" />
                    <StackPanel Grid.Row="2" Orientation="Vertical" Margin="20" HorizontalAlignment="Center" Background="#F7F7F7">
                        <Image Source="/Resources/uploadImage.png" Width="40" Height="40" />
                        <Label Style="{StaticResource CommonLabelStyle}" Content="'파일 선택'을 클릭하여 업로드 하세요" />
                        <Button Style="{StaticResource SecondaryButtonStyle}" Width="160" Command="{Binding CommandOpenFiles}"  >
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Resources/plusIcon.png" />
                                    <Label Content="파일 선택" />
                                </StackPanel>
                            </Button.Content>
                        </Button>
                    </StackPanel>

                    <ListBox Grid.Row="3" />
                    <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="15">
                        <Button Style="{StaticResource SecondaryButtonStyle}" Content="취소버튼" Margin="5" />
                        <Button Style="{StaticResource PrimaryButtonStyle}" Content="업로드" Margin="5" />
                    </StackPanel>
                </Grid>
            </mah:Flyout>
    </mah:FlyoutsControl>
    <Grid >
        
        <Grid.RowDefinitions>
            <!-- Searchbar 영역: 원본 비율로 약 25%, 최소 215px -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- ===== 상단 Searchbar 대체 UI (디자인) ===== -->
        <StackPanel Grid.Row="0" >
            <custom:SearchbarView DataContext="{Binding SearchbarViewModel}" />
            <custom:CustomFilterBar />
        </StackPanel>
        

        <!-- ===== 본문: 카드 그리드 + 선택 바(하단 오버레이) ===== -->
        <Grid Grid.Row="1">
            <!-- 스크롤 컨텐츠 -->
            <ScrollViewer x:Name="MainScroll" Padding="10,10,0,10">
                <!-- WrapPanel: 원본에서 6열 배치 감성 재현 (폭에 따라 자동 줄바꿈) -->
                <ItemsControl x:Name="CardsGrid">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel IsItemsHost="True" ItemWidth="300" ItemHeight="210" Margin="5" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <!-- 카드 템플릿 -->
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="5">
                                <Grid>
                                    <!-- 썸네일 -->
                                    <Image 
                                           Source="{Binding ThumbnailSource, FallbackValue={x:Null}}"/>
                                    <!-- 좌하단 라벨 버튼 -->
                                    <Border >
                                        <!-- 여기의 Text/색상은 VM에서 ManualResult에 따라 바인딩/트리거로 교체 예정 -->
                                    </Border>
                                    <!-- 우상단 선택 체크(디자인; 동작 연결 시 Visibility 토글) -->
                                    <Border />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>

                    <!-- 더미 아이템들(디자인 미리보기용) -->
                    <ItemsControl.Items>
                        <sys:String xmlns:sys="clr-namespace:System;assembly=mscorlib">dummy</sys:String>
                        <sys:String xmlns:sys="clr-namespace:System;assembly=mscorlib">dummy</sys:String>
                        <sys:String xmlns:sys="clr-namespace:System;assembly=mscorlib">dummy</sys:String>
                        <sys:String xmlns:sys="clr-namespace:System;assembly=mscorlib">dummy</sys:String>
                        <sys:String xmlns:sys="clr-namespace:System;assembly=mscorlib">dummy</sys:String>
                        <sys:String xmlns:sys="clr-namespace:System;assembly=mscorlib">dummy</sys:String>
                    </ItemsControl.Items>
                </ItemsControl>
            </ScrollViewer>

            <!-- “데이터 없음” 메시지 -->
            <StackPanel  Visibility="Collapsed">
                <Image Source="/Resources/noSearchResultsFound.png"
                       Width="35" Height="35" Margin="0,0,6,0"/>
                <TextBlock Text="Không có dữ liệu để hiển thị." 
                           Foreground="Gray" FontWeight="Bold" FontSize="12" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- 드래그 선택 테두리(디자인용 4변) -->
            <Canvas IsHitTestVisible="False">
                <Rectangle x:Name="SelTop"    Height="1" Fill="Blue" Visibility="Collapsed"/>
                <Rectangle x:Name="SelBottom" Height="1" Fill="Blue" Visibility="Collapsed"/>
                <Rectangle x:Name="SelLeft"   Width="1"  Fill="Blue" Visibility="Collapsed"/>
                <Rectangle x:Name="SelRight"  Width="1"  Fill="Blue" Visibility="Collapsed"/>
            </Canvas>

            <!-- 하단 중앙 선택 패널(SelectedPanel 대체) -->
            <Border x:Name="SelectedBar"
                    Style="{StaticResource CustomPanelStyle}"
                    Width="510"
                    Height="50"
                    Visibility="Collapsed">
                <DockPanel LastChildFill="False">
                    <TextBlock Text="Selected: 0"
                               FontWeight="SemiBold"
                               
                               VerticalAlignment="Center" />
                    <Border 
                            CornerRadius="6" Padding="10,6" Margin="12,0,0,0" DockPanel.Dock="Right">
                        <TextBlock Text="Update Label" Foreground="White"/>
                    </Border>
                    <Border Background="#FFE7E7EE"
                            CornerRadius="6" Padding="10,6" Margin="12,0,0,0" DockPanel.Dock="Right">
                        <TextBlock Text="Cancel" Foreground="Black"/>
                    </Border>
                </DockPanel>
            </Border>
        </Grid>
    </Grid>
    </Grid>
</UserControl>
