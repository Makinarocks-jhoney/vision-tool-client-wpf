<UserControl x:Class="vision_tool_client_wpf.View.CustomControl.SearchbarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="900" MinHeight="200"
             Background="#FFF9F9FB">

    <!-- 팔레트 & 공통 스타일 -->
    <UserControl.Resources>
        <!-- Colors (WinForms 코드와 동일한 감성) -->
        <Color x:Key="ColTitle">#FF393847</Color>
        <!-- (57,56,71) -->
        <Color x:Key="ColPanelBg">#FFF8F8FC</Color>
        <!-- (248,248,252) -->
        <Color x:Key="ColWhite">#FFFFFFFF</Color>
        <Color x:Key="ColBorder">#FFE7E7EE</Color>
        <!-- (231,231,238) -->
        <Color x:Key="ColBorderLight">#FFC8C8C8</Color>
        <!-- (200,200,200) -->
        <Color x:Key="ColMuted">#FF70708F</Color>
        <!-- (112,112,143) -->
        <Color x:Key="ColPrimary">#FF3A51FB</Color>
        <!-- (58,81,251) -->
        <Color x:Key="ColBtnBorder">#FFD3D3DE</Color>
        <!-- (211,211,222) -->
        <Color x:Key="ColBtnText">#FF2B2B3B</Color>
        <!-- (43,43,59) -->

        <SolidColorBrush x:Key="BrushTitle" Color="{StaticResource ColTitle}"/>
        <SolidColorBrush x:Key="BrushPanelBg" Color="{StaticResource ColPanelBg}"/>
        <SolidColorBrush x:Key="BrushWhite" Color="{StaticResource ColWhite}"/>
        <SolidColorBrush x:Key="BrushBorder" Color="{StaticResource ColBorder}"/>
        <SolidColorBrush x:Key="BrushBorderLight" Color="{StaticResource ColBorderLight}"/>
        <SolidColorBrush x:Key="BrushMuted" Color="{StaticResource ColMuted}"/>
        <SolidColorBrush x:Key="BrushPrimary" Color="{StaticResource ColPrimary}"/>
        <SolidColorBrush x:Key="BrushBtnBorder" Color="{StaticResource ColBtnBorder}"/>
        <SolidColorBrush x:Key="BrushBtnText" Color="{StaticResource ColBtnText}"/>

        <!-- 큰 제목 -->
        <Style x:Key="TitleText" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Pretendard, Segoe UI, Malgun Gothic"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Foreground" Value="{StaticResource BrushTitle}"/>
            <Setter Property="Margin" Value="15,0,0,0"/>
        </Style>

        <!-- 라벨 (왼쪽 캡션) -->
        <Style x:Key="Caption" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Pretendard, Segoe UI, Malgun Gothic"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource BrushMuted}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- 필드 컨테이너 (CustomPanel 대체: 코너/보더/배경) -->
        <Style x:Key="FieldPanel" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource BrushWhite}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BrushBorder}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="10"/>
        </Style>

        <!-- 날짜 필드 (얕은 코너) -->
        <Style x:Key="DateFieldPanel" TargetType="Border" BasedOn="{StaticResource FieldPanel}">
            <Setter Property="CornerRadius" Value="4"/>
        </Style>

        <!-- 텍스트박스 placeholder 템플릿 (🔍 Tìm kiếm...) -->
        <Style x:Key="WatermarkTextBox" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontFamily" Value="Arial, Segoe UI, Malgun Gothic"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="{StaticResource BrushMuted}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <ScrollViewer x:Name="PART_ContentHost"/>
                            <TextBlock x:Name="Watermark"
                                       Text="{TemplateBinding Tag}"
                                       Margin="2,0,0,0"
                                       Foreground="#80000000"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Watermark" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 좌측 아이콘이 있는 라운드 버튼(Select All / Upload) -->
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="FontFamily" Value="Pretendard, Segoe UI, Malgun Gothic"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="MinWidth" Value="140"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <Grid Margin="0,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <ContentPresenter x:Name="IconHost"
                                                  Grid.Column="0"
                                                  Content="{TemplateBinding Tag}"  
                                    VerticalAlignment="Center"/>
                                    <ContentPresenter Grid.Column="2"
                                                  Content="{TemplateBinding Content}"
                                                  VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        
    </UserControl.Resources>

    <!-- ===== 레이아웃 ===== -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 타이틀 -->
            <RowDefinition Height="Auto"/>
            <!-- 서치바 카드 -->
            <RowDefinition Height="Auto"/>
            <!-- 하단: 커스텀 필터 + 버튼 2개 -->
        </Grid.RowDefinitions>

        <!-- 제목: "카메라 설정" -->
        <TextBlock Grid.Row="0" Text="실시간 검사" Style="{StaticResource TitleText}" />

        <!-- 서치바 카드(배경=F8F8FC, Corner 12, 얕은 외곽선) -->
        <Border Grid.Row="1" Margin="15,15,15,10"
                Background="{StaticResource BrushPanelBg}"
                BorderBrush="{StaticResource BrushBorderLight}"
                BorderThickness="2" CornerRadius="12" Padding="20">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- 날짜 필터 행 -->
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="Auto"/>
                    <!-- 검색 행 -->
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <!-- 왼쪽 라벨 폭 -->
                    <ColumnDefinition Width="260"/>
                    <!-- 시작일 -->
                    <ColumnDefinition Width="24"/>
                    <!-- ~ -->
                    <ColumnDefinition Width="260"/>
                    <!-- 종료일 -->
                    <ColumnDefinition Width="*"   />
                    <!-- 여백 -->
                </Grid.ColumnDefinitions>

                <!-- "Lọc thời gian:" -->
                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="기간" Style="{StaticResource Caption}"
                           Margin="15,0,5,0" Height="40" />

                <!-- 시작일 -->
                <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource DateFieldPanel}" Height="40">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="28"/>
                        </Grid.ColumnDefinitions>
                        <!-- 표시 텍스트박스 (디자인용) -->
                        <TextBox BorderThickness="0"
                                 Foreground="{StaticResource BrushMuted}"
                                 FontFamily="Pretendard, Segoe UI, Malgun Gothic"
                                 FontSize="11"
                                 Text="2025.08.31" VerticalContentAlignment="Center" />
                        <!-- 캘린더 아이콘 -->
                        <Image Grid.Column="1" Margin="0,0,2,0"
                               Width="20" Height="20" VerticalAlignment="Center"
                               Source="/Resources/calendar_icon.png"/>
                    </Grid>
                </Border>

                <!-- 틸드 "~" -->
                <TextBlock Grid.Row="0" Grid.Column="2" Text="~"
                           Style="{StaticResource Caption}" FontSize="14"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>

                <!-- 종료일 -->
                <Border Grid.Row="0" Grid.Column="3" Style="{StaticResource DateFieldPanel}" Height="40">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="28"/>
                        </Grid.ColumnDefinitions>
                        <TextBox BorderThickness="0"
                                 Foreground="{StaticResource BrushMuted}"
                                 FontFamily="Pretendard, Segoe UI, Malgun Gothic"
                                 FontSize="11"
                                 Text="2025.09.30" VerticalContentAlignment="Center"/>
                        <Image Grid.Column="1" Margin="0,0,2,0"
                               Width="20" Height="20" VerticalAlignment="Center"
                               Source="/Resources/calendar_icon.png"/>
                    </Grid>
                </Border>

                <!-- "Tìm kiếm:" -->
                <TextBlock Grid.Row="2" Grid.Column="0"
                           Text="검색" Style="{StaticResource Caption}"
                           Margin="15,0,5,0" Height="40" VerticalAlignment="Center"/>

                <!-- 검색 필드 (🔍 placeholder) -->
                <Border Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3"
                        Style="{StaticResource FieldPanel}" Height="40">
                    <TextBox Style="{StaticResource WatermarkTextBox}"
                             Tag="🔍  Search..." />
                </Border>
            </Grid>
        </Border>

        <!-- 하단: 커스텀 필터 바(왼쪽) + 버튼 2개(오른쪽) -->
        <Grid Grid.Row="2" Margin="15,0,15,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- CustomFilterBar 자리(디자인용 바탕만) -->
            <Border Grid.Column="0" Height="60"
                    Background="Transparent" BorderBrush="{StaticResource BrushBorder}"
                    BorderThickness="0" CornerRadius="6"
                    VerticalAlignment="Center">
                <!-- 여기 안에 필터 버튼/토글들이 들어갈 예정 -->
            </Border>

            <!-- Upload 버튼 -->
            <Button Grid.Column="1" Content="Upload"
                    Style="{StaticResource IconButton}"
                    Background="{StaticResource BrushPrimary}"
                    Foreground="White"
                    BorderBrush="{StaticResource BrushPrimary}"
                    BorderThickness="2"
                    VerticalAlignment="Center">
                <Button.Tag>
                    <Image Width="20" Height="20"
                           Source="/Resources/plus.png"/>
                </Button.Tag>
            </Button>

            <!-- Select All 버튼 -->
            <Button Grid.Column="3" Content="Select All"
                    Style="{StaticResource IconButton}"
                    Background="{StaticResource BrushWhite}"
                    Foreground="{StaticResource BrushBtnText}"
                    BorderBrush="{StaticResource BrushBtnBorder}"
                    BorderThickness="2"
                    VerticalAlignment="Center">
                <Button.Tag>
                    <Image Width="20" Height="20"
                           Source="/Resources/icon-park-outline_done-all.png"/>
                </Button.Tag>
            </Button>
        </Grid>
    </Grid>
</UserControl>
