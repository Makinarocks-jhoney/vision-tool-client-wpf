<UserControl x:Class="vision_tool_client_wpf.View.RealTimeInspectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:custom="clr-namespace:vision_tool_client_wpf.View.CustomControl"
             xmlns:local="clr-namespace:vision_tool_client_wpf.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid >
        <Grid.RowDefinitions>
            <!-- Searchbar 영역: 원본 비율로 약 25%, 최소 215px -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- ===== 상단 Searchbar 대체 UI (디자인) ===== -->
        <StackPanel Grid.Row="0" >
            <custom:SearchbarView  />
            <custom:CustomFilterBar />
        </StackPanel>
        

        <!-- ===== 본문: 카드 그리드 + 선택 바(하단 오버레이) ===== -->
        <Grid Grid.Row="1">
            <!-- 스크롤 컨텐츠 -->
            <ScrollViewer x:Name="MainScroll" Padding="10,10,0,10">
                <!-- WrapPanel: 원본에서 6열 배치 감성 재현 (폭에 따라 자동 줄바꿈) -->
                <ItemsControl x:Name="CardsGrid">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel IsItemsHost="True" ItemWidth="300" ItemHeight="210" Margin="5" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <!-- 카드 템플릿 -->
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="5">
                                <Grid>
                                    <!-- 썸네일 -->
                                    <Image 
                                           Source="{Binding ThumbnailSource, FallbackValue={x:Null}}"/>
                                    <!-- 좌하단 라벨 버튼 -->
                                    <Border >
                                        <!-- 여기의 Text/색상은 VM에서 ManualResult에 따라 바인딩/트리거로 교체 예정 -->
                                    </Border>
                                    <!-- 우상단 선택 체크(디자인; 동작 연결 시 Visibility 토글) -->
                                    <Border />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>

                    <!-- 더미 아이템들(디자인 미리보기용) -->
                    <ItemsControl.Items>
                        <sys:String xmlns:sys="clr-namespace:System;assembly=mscorlib">dummy</sys:String>
                        <sys:String xmlns:sys="clr-namespace:System;assembly=mscorlib">dummy</sys:String>
                        <sys:String xmlns:sys="clr-namespace:System;assembly=mscorlib">dummy</sys:String>
                        <sys:String xmlns:sys="clr-namespace:System;assembly=mscorlib">dummy</sys:String>
                        <sys:String xmlns:sys="clr-namespace:System;assembly=mscorlib">dummy</sys:String>
                        <sys:String xmlns:sys="clr-namespace:System;assembly=mscorlib">dummy</sys:String>
                    </ItemsControl.Items>
                </ItemsControl>
            </ScrollViewer>

            <!-- “데이터 없음” 메시지 -->
            <StackPanel  Visibility="Collapsed">
                <Image Source="/Resources/noSearchResultsFound.png"
                       Width="35" Height="35" Margin="0,0,6,0"/>
                <TextBlock Text="Không có dữ liệu để hiển thị." 
                           Foreground="Gray" FontWeight="Bold" FontSize="12" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- 드래그 선택 테두리(디자인용 4변) -->
            <Canvas IsHitTestVisible="False">
                <Rectangle x:Name="SelTop"    Height="1" Fill="Blue" Visibility="Collapsed"/>
                <Rectangle x:Name="SelBottom" Height="1" Fill="Blue" Visibility="Collapsed"/>
                <Rectangle x:Name="SelLeft"   Width="1"  Fill="Blue" Visibility="Collapsed"/>
                <Rectangle x:Name="SelRight"  Width="1"  Fill="Blue" Visibility="Collapsed"/>
            </Canvas>

            <!-- 하단 중앙 선택 패널(SelectedPanel 대체) -->
            <Border x:Name="SelectedBar"
                    Style="{StaticResource CustomPanelStyle}"
                    Width="510"
                    Height="50"
                    Visibility="Collapsed">
                <DockPanel LastChildFill="False">
                    <TextBlock Text="Selected: 0"
                               FontWeight="SemiBold"
                               
                               VerticalAlignment="Center" />
                    <Border 
                            CornerRadius="6" Padding="10,6" Margin="12,0,0,0" DockPanel.Dock="Right">
                        <TextBlock Text="Update Label" Foreground="White"/>
                    </Border>
                    <Border Background="#FFE7E7EE"
                            CornerRadius="6" Padding="10,6" Margin="12,0,0,0" DockPanel.Dock="Right">
                        <TextBlock Text="Cancel" Foreground="Black"/>
                    </Border>
                </DockPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
